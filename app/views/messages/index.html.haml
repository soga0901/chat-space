%body
  .container
    .left-bar
      .left-bar__user
        = link_to root_path, class: "link-btn"  do
          %h2.user__name
            = current_user.name
        .setting__btn
          = link_to new_group_path do
            %i.fa.fa-pencil-square-o
          = link_to edit_user_registration_path do
            %i.fa.fa-gear
      .chat__lists
        - current_user.groups.each do |group|
          = link_to group_messages_path(group), class: "link-btn" do
            .chat__list
              %h3.chat__room__name
                = group.name
              %p.chat__room__message
                - if group.messages.length == 0
                  まだメッセージがありません。
                - else
                  = group.messages.last(1)
    .chat
      .chat__heading
        %h2.chat__heading__name
          = @group.name
        .edit__btn
          = link_to "Edit", edit_group_path(@group),  class: "edit__btn__link"
        %p.chat__heading__member
          member:
          - @group.group_users.each do |group_user|
            = group_user.user.name
      .chat__messages
        .message
          - @messages.each do |message|
            %h3.message__user__name
              = message.user.name
            %h4.message__date
              = message.created_at
            %p.message__text
              = message.body
      .chat__input
        = form_for( [ @group, @message] ) do |f|
          = f.text_field :body, placeholder: "type a text", class: "chat__input__area"
          %i.fa.fa-photo
          = f.submit "Send", class: "chat__input__send__btn"
